{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "wayclip-gui",
    "version": "0.1.0",
    "identifier": "dev.wayclip.gui",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Wayclip App",
                "width": 1200,
                "height": 800,
                "decorations": false,
                "visible": true
            }
        ],
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/Square89x89Logo.png"]
    }
}
