{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "wayclip-gui",
    "version": "0.1.0",
    "identifier": "com.wayclip.dev",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Wayclip App",
                "width": 1200,
                "height": 800,
                "decorations": false,
                "visible": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; media-src 'self' asset://*",
            "assetProtocol": {
                "enable": true,
                "scope": ["$CONFIG/wayclip/previews/**", "$RESOURCE/**", "**/**"]
            }
        },
        "withGlobalTauri": true
    },
    "plugins": {
        "deep-link": {
            "desktop": {
                "schemes": ["wayclip"]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/Square89x89Logo.png"]
    }
}
